<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_item_linear_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingStart="@dimen/widget_margin"
    android:paddingLeft="@dimen/widget_margin"
    android:paddingEnd="@dimen/widget_margin"
    android:paddingRight="@dimen/widget_margin"
    android:layout_marginStart="@dimen/widget_margin"
    android:layout_marginLeft="@dimen/widget_margin"
    android:layout_marginEnd="@dimen/widget_margin"
    android:layout_marginRight="@dimen/widget_margin">>

    <TextView
        android:id="@+id/widget_score_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/widget_score_score"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>