<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/widget_launch_categories_grid"
        android:layout_width="@dimen/widget_icon_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_clear_all_black_24dp"/>

    <ImageView
        android:id="@+id/widget_launch_all_sets_grid"
        android:layout_width="@dimen/widget_icon_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_playlist_play_black_24dp"/>

<!--    <ImageView
        android:id="@+id/widget_launch_scores_grid"
        android:layout_width="@dimen/widget_icon_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_menu_gallery"/>-->

</LinearLayout>