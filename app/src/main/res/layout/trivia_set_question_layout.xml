<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/trivia_set_test_cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/trivia_set_question_textview_margin"
        card_view:cardCornerRadius="@dimen/trivia_category_corner_radius"
        card_view:contentPadding="@dimen/trivia_category_cardview_content_padding"
        android:elevation="@dimen/card_elevation"
        app:theme="@style/AppTheme.NoActionBar.Card">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/trivia_set_test_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:id="@+id/trivia_set_question_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/trivia_set_test_textView1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:contentDescription="@string/action_list_scores">
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>